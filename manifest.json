{
    "manifest_version": 3,
    "name": "Configurable Tab Limiter",
    "version": "1.0",
    "description": "Limits the number of open tabs with a configurable limit",
    "permissions": ["tabs", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }